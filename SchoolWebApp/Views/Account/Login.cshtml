@using SchoolWebApp.ViewModels
@model LoginViewModel
@{
    ViewData["Title"] = "Login";
}
<h1>Login</h1>
<div class="text-danger" asp-validation-summary="All"></div>
<form class="row justify-content-start d-flex flex-column" asp-action="Login" method="post">
    <div class="col-6 col-sm-3">
        <input type="hidden" asp-for="ReturnUrl" />
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            Remember me? <input type="checkbox" asp-for="RememberMe"/>
        </div>
    </div>
    <div class="col-auto mt-auto">
        <button class="btn btn-primary mt-3" type="submit">Log In</button>
    </div>
</form>
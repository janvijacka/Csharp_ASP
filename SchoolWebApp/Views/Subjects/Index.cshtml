@using SchoolWebApp.DTO
@model IEnumerable<SubjectDTO>
<h2>List of subjects</h2>
<a class="btn btn-info my-2" asp-action="Create">Add</a>
@foreach(var subject in Model) {
    <div class="border border-dark">
        <h5>@subject.Name</h5>
        <p>@subject.Id</p>
        <a class="btn btn-warning mb-2" asp-action="Update" asp-route-id="@subject.Id">Edit</a>
        <form method="post">
            <button type="submit" class="btn btn-danger mb-2" asp-action="Delete" asp-route-id="@subject.Id">Delete</button>
        </form>
    </div>
}

